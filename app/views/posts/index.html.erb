<h2>Company Blog</h2>

<!-- Loop through all the available blog posts. -->

<% @posts.each do |post| %>
  <article>
    <h3><%= link_to post.title, post %></h3>
    <div>
      <%= post.content %>
    </div>
    <p>
      <%= link_to 'Delete This Post', post,
         :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      <%= link_to 'Edit This Post', edit_post_path(post) %>
    </p>
  </article>
<% end %>

<p>
  <%= link_to 'Create New Blog Post', new_post_path %>
</p>
